<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#aaa"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/counterText"
        android:textColor="#000"
        android:textSize="30sp" />

    <ballInHole.view.widgets.DrawingPanel
        android:id="@+id/drawingPanel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.25"
        android:background="@drawable/grass_pattern"
        android:clickable="false"
        android:tileMode="repeat" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="#aaa"
        android:padding="5dp" >

        <ImageButton
            android:id="@+id/playAndPauseButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:onClick="clickPlayAndPauseButton"
            android:src="@drawable/ic_play" />

        <ImageButton
            android:id="@+id/stopButton"
            style="@style/AppTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:onClick="clickStopButton"
            android:src="@drawable/ic_stop" />
    </LinearLayout>

</LinearLayout>